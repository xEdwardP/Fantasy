@page "/countries"

<h3>@Localizer["Countries"]</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">@Localizer["New"] @Localizer["Country"]</a>
</div>

<GenericList MyList="Countries">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Localizer["Country"]</th>
                    <th># @Localizer["Teams"]</th>
                    <th>@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>@country.TeamsCount</td>
                        <td>
                            <a class="btn btn-outline-warning btn-sm" href="/countries/edit/@country.Id">@Localizer["Edit"]</a>
                            <button class="btn btn-outline-danger btn-sm" @onclick=@(() => DeleteAsync(country))>@Localizer["Delete"]</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>